<%- model_class = ProgramSegment -%>
<div class="page-header">
  <h1><%=t '.title', :default => ProgramSegment %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:name) %></dt>
      <dd><pre class="prettyprint"><%= @program_segment.name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:date) %></dt>
      <dd><pre class="prettyprint"><%= @program_segment.date %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:cost) %></dt>
      <dd><pre class="prettyprint"><%= @program_segment.cost %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:capacity) %></dt>
      <dd><pre class="prettyprint"><%= @program_segment.capacity %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:enrolled) %></dt>
      <dd><pre class="prettyprint"><%= @program_segment.enrolled %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              program_segments_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_program_segment_path(@program_segment), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              program_segment_path(@program_segment),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

