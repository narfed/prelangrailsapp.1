<%= simple_form_for(@program_segment) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :date %>
    <%= f.input :cost %>
    <%= f.input :capacity %>
    <%= f.input :enrolled %>
    <%= f.association :program_model %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
