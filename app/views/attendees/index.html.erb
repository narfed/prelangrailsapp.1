<h1>Listing attendees</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Allergies</th>
      <th>Special needs</th>
      <th>Age</th>
      <th>Program segment</th>
      <th>Emmergencycontactphone</th>
      <th>Media release</th>
      <th>Registrant</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @attendees.each do |attendee| %>
      <tr>
        <td><%= attendee.name %></td>
        <td><%= attendee.allergies %></td>
        <td><%= attendee.special_needs %></td>
        <td><%= attendee.age %></td>
        <td><%= attendee.program_segment %></td>
        <td><%= attendee.emmergencycontactphone %></td>
        <td><%= attendee.media_release %></td>
        <td><%= attendee.registrant %></td>
        <td><%= link_to 'Show', attendee %></td>
        <td><%= link_to 'Edit', edit_attendee_path(attendee) %></td>
        <td><%= link_to 'Destroy', attendee, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

