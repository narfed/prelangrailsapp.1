<%= simple_form_for(@attendee) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :allergies %>
    <%= f.input :special_needs %>
    <%= f.input :age %>
    <%= f.association :program_segment %>
    <%= f.input :emmergencycontactphone %>
    <%= f.input :media_release %>
    <%= f.association :registrant %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
